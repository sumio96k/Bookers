<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title%></td>
        <td><%= book.body%></td>
        <td>
          <a><%= link_to 'Show', book_path(book.id) %></a>
        </td>
        <td>
          <a><%= link_to 'Edit', edit_list_path(book.id) %></a>
        </td>
        <td>
          <a><%= link_to 'Delete', destroy_list_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>


<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |messages| %>
      <li><%= messages %></li>
      <% end %>
    </ul>
  </div>
  <!-- エラー時の投稿フォーム -->
  <%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div class="field">

    <div class="field_with_errors">
      <label for="book_title">Title</label>
    </div>

    <div class="field_with_errors">
      <%= f.text_field :title %>
    </div>

  </div>
  <div class="field">

    <div class="field_with_errors">
      <label>Body</label>
    </div>

    <div class="field_with_errors">
        <%= f.text_area :body %>
    </div>

  </div
  <div class="actions">
    <%= f.submit 'Create book' %>
  </div>
  <% end %>
  <!-- エラー時の投稿フォームここまで -->

<% else %>

  <!-- 通常時の投稿フォーム -->
  <%= form_with model: @book, url: '/books', method: :post do |f| %>
    <div class="field">
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label>Body</label>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit 'Create book' %>
    </div>
  <% end %>
  <!-- 通常時の投稿フォームここまで -->

<% end %>
