<h1>Bookers</h1>

<th>Title</th>
<th>Body</th>

<% @books.each do |book| %>
  <span><%= book.title%></span>
  <span><%= book.body%></span>
  <%= link_to 'Show', book_path(book.id) %>
  <%= link_to 'Edit', edit_list_path(book.id) %>
  <%= link_to 'Delete', destroy_list_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
<% end %>

<h1>New book</h1>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create book' %>
<% end %>
