<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |messages| %>
      <li><%= messages %></li>
      <% end %>
    </ul>
  </div>
  <!-- エラー時の投稿フォーム -->
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
    <div class="field">

      <div class="field_with_errors">
        <label>Title</label>
      </div>

      <div class="field_with_errors">
        <%= f.text_field :title %>
      </div>
    </div>

    <div class="field">

      <div class="field_with_errors">
        <label>Body</label>
      </div>

      <div class="field_with_errors">
        <%= f.text_area :body %>
      </div>

    </div>
    <div class="actions">
      <%= f.submit 'Update Book' %>
    </div>
  <% end %>
  <!-- エラー時の投稿フォームここまで -->

<% else %>
  <!-- 通常時の投稿フォーム -->
  <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
    <div class="field">
      <label>Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label>Body</label>
      <%= f.text_area :body %>
    </div>
    <div class="actions">
      <%= f.submit 'Update Book' %>
    </div>
  <% end %>
  <!-- 通常時の投稿フォームここまで -->
<% end %>


<%= link_to 'Show', book_path(@book.id) %>
