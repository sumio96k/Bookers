<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |messages| %>
    <li><%= messages %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: update_list_path, method: :patch do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>
  <label>Body</label>
  <%= f.text_area :body %>

  <%= f.submit '保存' %>
<% end %>



<span><%= link_to 'Show', book_path(@book.id) %></span> | <span><%= link_to 'Back', '/books' %></span>
